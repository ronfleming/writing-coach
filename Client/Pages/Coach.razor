@page "/"
@page "/coach"
@inject CoachApiService CoachApi
@inject AuthService Auth
@inject IWebAssemblyHostEnvironment HostEnv

<PageTitle>German Writing Coach - AI-Powered German Writing Assistant</PageTitle>

<HeadContent>
    <meta name="description" content="Transform your German writing into natural, professional prose. Get grammar corrections, C1-level upgrades, targeted feedback, and reusable phrases." />
    <meta property="og:title" content="German Writing Coach - AI-Powered German Writing Assistant" />
    <meta property="og:description" content="Transform your German writing into natural, professional prose with AI-powered corrections and learning feedback." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://germanwritingcoach.com/og-image.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="German Writing Coach - AI-Powered German Writing Assistant" />
    <meta name="twitter:description" content="Transform your German writing into natural, professional prose." />
    <meta name="twitter:image" content="https://germanwritingcoach.com/og-image.png" />
    <link rel="canonical" href="https://germanwritingcoach.com/" />
</HeadContent>

<div class="coach-container">
    <div class="input-section">
        <div class="form-group textarea-group">
            <div class="textarea-header">
                <label for="textInput">Your German Text</label>
                <details class="help-toggle">
                    <summary>How it works</summary>
                    <div class="help-content">
                        <p>Paste your text, choose your settings, and click <strong>Coach Me</strong>.</p>
                        <p><strong>Minimal Fix</strong> ‚Äî Grammar &amp; spelling corrections only</p>
                        <p><strong>Upgraded Text</strong> ‚Äî Natural, polished version at your target level</p>
                        <p><strong>Feedback</strong> ‚Äî Specific issues with memorable rules</p>
                        <p><strong>Phrase Bank</strong> ‚Äî Reusable expressions from the improved text</p>
                    </div>
                </details>
            </div>
            <textarea
                id="textInput"
                @bind="inputText"
                @bind:event="oninput"
                placeholder="Write or paste your German text here (at least 10 characters)..."
                rows="6"
                maxlength="5000"
                disabled="@isLoading"></textarea>
            <div class="char-count @((inputText?.Length ?? 0) is > 0 and < 10 ? "char-count-warn" : "")">
                @(inputText?.Length ?? 0) / 5000 characters
                @if ((inputText?.Length ?? 0) is > 0 and < 10)
                {
                    <span> ‚Äî need at least 10</span>
                }
            </div>
        </div>

        <div class="settings-essential">
            <div class="form-group">
                <label for="register">Tone</label>
                <select id="register" @bind="selectedRegister" disabled="@isLoading">
                    <option value="@Register.Colloquial">Colloquial</option>
                    <option value="@Register.Neutral">Neutral</option>
                    <option value="@Register.Formal">Formal</option>
                </select>
            </div>

            <div class="form-group">
                <label for="goal">Goal</label>
                <select id="goal" @bind="selectedGoal" disabled="@isLoading">
                    <option value="@Goal.Correct">Correct</option>
                    <option value="@Goal.Shorten">Shorten</option>
                    <option value="@Goal.Clarify">Clarify</option>
                    <option value="@Goal.Persuade">Persuade</option>
                    <option value="@Goal.Diplomatic">Diplomatic</option>
                </select>
            </div>
        </div>

        <details class="settings-advanced">
            <summary>Advanced settings</summary>
            <div class="advanced-grid">
                <div class="form-group">
                    <label for="context">Context</label>
                    <select id="context" @bind="selectedContext" disabled="@isLoading">
                        <option value="@Context.General">General</option>
                        <option value="@Context.Recruiter">Recruiter Email</option>
                        <option value="@Context.CoverLetter">Cover Letter</option>
                        <option value="@Context.Behoerden">Beh√∂rden</option>
                        <option value="@Context.Landlord">Landlord</option>
                        <option value="@Context.Bank">Bank</option>
                        <option value="@Context.Insurance">Insurance</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="level">Target Level</label>
                    <select id="level" @bind="selectedLevel" disabled="@isLoading">
                        <option value="@ProficiencyLevel.A1">A1</option>
                        <option value="@ProficiencyLevel.A2">A2</option>
                        <option value="@ProficiencyLevel.B1">B1</option>
                        <option value="@ProficiencyLevel.B2">B2</option>
                        <option value="@ProficiencyLevel.C1">C1</option>
                        <option value="@ProficiencyLevel.C2">C2</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="model">AI Model</label>
                    <select id="model" @bind="selectedModel" disabled="@isLoading">
                        @foreach (var (model, details) in AIModelInfo.All)
                        {
                            if (details.IsPremium && !canUsePremium)
                            {
                                <option value="@model" disabled>üîí @details.DisplayName (requires account)</option>
                            }
                            else
                            {
                                <option value="@model">@details.DisplayName @(details.IsPremium ? "‚ö°" : "")</option>
                            }
                        }
                    </select>
                    <div class="model-info">@AIModelInfo.Get(selectedModel).Description ‚Äî @AIModelInfo.Get(selectedModel).ApproxCostPerRequest/req</div>
                </div>
            </div>
        </details>

        <button class="coach-button" @onclick="SubmitAsync"
                disabled="@(isLoading || string.IsNullOrWhiteSpace(inputText) || (inputText?.Length ?? 0) < 10)">
            @if (isLoading)
            {
                <span class="spinner"></span>
                <span>Analyzing...</span>
            }
            else
            {
                <span>üéØ Coach Me</span>
            }
        </button>

        @if (rateLimitInfo is not null)
        {
            <div class="rate-limit-banner">
                <span class="rate-limit-icon">‚è≥</span>
                <div class="rate-limit-text">
                    <strong>You've reached the request limit.</strong>
                    Try again in @FormatRetryTime(rateLimitInfo.RetryAfterSeconds).
                    @if (rateLimitInfo.IsAnonymous)
                    {
                        <span>
                            <a href="/.auth/login/github">Sign in</a> for a higher limit.
                        </span>
                    }
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                ‚ö†Ô∏è @errorMessage
            </div>
        }
    </div>

    @if (response is not null)
    {
        @if (!Auth.IsAuthenticated)
        {
            <div class="auth-nudge">
                üí° <strong>Want to save this?</strong>
                <a href="/.auth/login/github">Sign in</a> to save your sessions and build your personal phrase bank.
            </div>
        }

        <CoachResultDisplay Response="response" Level="selectedLevel" />
    }
</div>

@code {
    private string? inputText;
    private Register selectedRegister = Register.Formal;
    private Goal selectedGoal = Goal.Correct;
    private Context selectedContext = Context.General;
    private ProficiencyLevel selectedLevel = ProficiencyLevel.C1;
    private AIModel selectedModel = AIModel.Gpt41Mini;

    private bool isDev;
    private bool canUsePremium;
    private bool isLoading;
    private string? errorMessage;
    private RateLimitedException? rateLimitInfo;
    private CoachResponse? response;

    protected override async Task OnInitializedAsync()
    {
        isDev = HostEnv.IsDevelopment();
        await Auth.GetAuthStateAsync();
        // Premium models: available in dev or for authenticated users
        canUsePremium = isDev || Auth.IsAuthenticated;
    }

    private async Task SubmitAsync()
    {
        if (string.IsNullOrWhiteSpace(inputText) || inputText.Length < 10)
            return;

        isLoading = true;
        errorMessage = null;
        rateLimitInfo = null;
        response = null;

        try
        {
            var request = new CoachRequest
            {
                Text = inputText,
                Register = selectedRegister,
                Goal = selectedGoal,
                Context = selectedContext,
                TargetLevel = selectedLevel,
                Model = selectedModel
            };

            response = await CoachApi.AnalyzeAsync(request);
        }
        catch (RateLimitedException rle)
        {
            rateLimitInfo = rle;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string FormatRetryTime(int seconds)
    {
        if (seconds < 60) return $"{seconds} seconds";
        var minutes = (int)Math.Ceiling(seconds / 60.0);
        return minutes == 1 ? "1 minute" : $"{minutes} minutes";
    }
}
