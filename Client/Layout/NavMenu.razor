@inject AuthService Auth
@inject NavigationManager Nav
@inject IWebAssemblyHostEnvironment HostEnv
@inject HttpClient Http

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="logo.png" alt="German Writing Coach" class="brand-logo" />
            <span class="brand-name">German Writing Coach</span>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Coach
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="history">
                <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> History
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="phrases">
                <span class="bi bi-book-nav-menu" aria-hidden="true"></span> Phrases
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about-us">
                <span class="bi bi-info-circle-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>

    <div class="sidebar-account">
        @if (Auth.IsAuthenticated)
        {
            <div class="account-user">
                <span class="user-avatar">👤</span>
                <span class="user-name" title="@Auth.CurrentUserId">@Auth.CurrentUserDisplayName</span>
            </div>
            <a class="account-action" href="/.auth/logout?post_logout_redirect_uri=/">
                Sign out
            </a>
        }
        else
        {
            <div class="account-label">Sign in</div>
            <a class="account-provider" href="/.auth/login/github?post_login_redirect_uri=@currentPath" target="_blank" rel="noopener noreferrer">
                🐙 GitHub
            </a>
            <a class="account-provider" href="/.auth/login/aad?post_login_redirect_uri=@currentPath" target="_blank" rel="noopener noreferrer">
                🔷 Microsoft
            </a>
            <a class="account-provider" href="/.auth/login/google?post_login_redirect_uri=@currentPath" target="_blank" rel="noopener noreferrer">
                🔴 Google
            </a>
        }
    </div>

    @if (isDev)
    {
        <div class="sidebar-dev">
            <button class="dev-clear-btn" @onclick="ClearAllData" disabled="@isClearing">
                @if (isClearing)
                {
                    <span>Clearing...</span>
                }
                else
                {
                    <span>🗑️ Clear All Data</span>
                }
            </button>
            @if (clearMessage is not null)
            {
                <div class="clear-message">@clearMessage</div>
            }
        </div>
    }
</div>

@code {
    private bool collapseNavMenu = true;
    private bool isDev;
    private bool isClearing;
    private string? clearMessage;
    private string currentPath = "/";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        isDev = HostEnv.IsDevelopment();
        await Auth.GetAuthStateAsync();
    }

    protected override void OnParametersSet()
    {
        // Extract relative path for post-login redirect
        var uri = Nav.Uri;
        var baseUri = Nav.BaseUri;
        currentPath = "/" + uri[baseUri.Length..];
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task ClearAllData()
    {
        isClearing = true;
        clearMessage = null;

        try
        {
            var response = await Http.DeleteAsync("/api/admin/clear?userId=anonymous");
            if (response.IsSuccessStatusCode)
            {
                clearMessage = "✅ All data cleared";
            }
            else
            {
                clearMessage = "❌ Failed to clear data";
            }
        }
        catch (Exception ex)
        {
            clearMessage = $"❌ {ex.Message}";
        }
        finally
        {
            isClearing = false;
            StateHasChanged();

            await Task.Delay(3000);
            clearMessage = null;
            StateHasChanged();
        }
    }
}
